# Copy to .env and update credentials/paths as needed

# Database
ALBION_DB_DSN=postgres://postgres:postgres@localhost:5432/albionstats?sslmode=disable

# API
ALBION_API_BASE=https://gameinfo.albiononline.com/api/gameinfo
ALBION_REGION=americas

# Polling behavior
ALBION_EVENTS_PAGE_SIZE=50
ALBION_EVENTS_MAX_PAGES=1
ALBION_EVENTS_INTERVAL=10s
ALBION_HTTP_TIMEOUT=10s
ALBION_PLAYER_RATE=6
ALBION_PLAYER_BATCH=100

# Misc
ALBION_USER_AGENT=AlbionStats-KillboardPoller/1.0

